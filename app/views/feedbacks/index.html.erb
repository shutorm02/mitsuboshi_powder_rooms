<div class="w-full max-w-md my-24">
  <div class="border-b-2 border-bg-mitsuboshi-gray pb-3">
    <%= render 'spots/spot_title', spot: @spot %>
  </div>
  <div class="px-5 py-5">
    <h1 class="font-bold mb-5"><%= t('.title') %></h1>
    <% if @feedbacks.present? %>
      <%= render @feedbacks %>
    <% else %>
      <p><%= t('.no_result') %></p>
    <% end %>
  </div>
  <% if logged_in? %>
    <%= link_to new_spot_feedback_path(@spot) do %>
      <div class="flex justify-center mt-3 pb-5">
        <button class="btn nomal-btn"><%= t('defaults.give_feedback') %></button>
      </div>
    <% end %>
  <% end %>
</div>
