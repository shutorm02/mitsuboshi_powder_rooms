<div class="max-w-md bg-white rounded-2xl overflow-hidden shadow-lg mb-5">
  <div id="spot-id-<%= spot.id %>">
    <div class="px-6 py-4">
      <div class="font-bold text-xl tracking-wider"><%= spot.name %></div>
      <div class="flex flex-row pb-2">
        <i class="fas fa-star text-mitsuboshi-yellow pr-0.5"></i>
        <i class="fas fa-star text-mitsuboshi-yellow pr-0.5"></i>
        <i class="far fa-star text-mitsuboshi-yellow pr-0.5"></i>
        <p class="text-sm">(〇〇件の評価)</p>
      </div>
      <p class="pt-2"><%= spot.address %></p>
    </div>
    <div class="px-6 pb-2">
      <% spot.equipment_details.each do |equipment_details| %>
        <span class="inline-block rounded-full px-3 py-1 text-sm font-semibold mr-2 mb-2 bg-gray-200 text-white">
          <%= equipment_details.content %>
        </span>
      <% end %>
    </div>
  </div>
</div>
