<div class="w-full max-w-md mt-10 mb-32">
  <div class="pt-4 pb-5">
    <span id="btnMap" class="hidden inline-block bg-white rounded-full border border-gray-200 align-middle px-3 py-1 text-sm mr-2 mb-2 hover:bg-gray-200">
      <i class="fa-solid fa-location-dot"></i>
      <%= t('.map_view') %>
    </span>
    <span id="btnList" class="inline-block bg-white rounded-full border border-gray-200 align-middle px-3 py-1 text-sm mr-2 mb-2 hover:bg-gray-200">
      <i class="fas fa-list"></i>
      <%= t('.list_view') %>
    </span>
    <div class="relative w-full">
      <input type="text" id="keyword" class="block p-3.5 w-full text-sm rounded-lg border border-gray-200 focus:ring-blue-500 focus:border-blue-50" placeholder="駅名・施設名で検索">
      <button id="search" class="absolute right-2.5 bottom-2 hover:bg-gray-200 focus:ring-2 focus:outline-none focus:ring-blue-300 rounded-lg text-sm px-3 py-2">
        <i class="fas fa-search"></i>
      </button>
     </div>
  </div>
  <div id="spotsMap" style="height:700px; width:100%;"></div>
  <div id="spotsList" class="hidden">
    <% if @spots.present? %>
      <%= render @spots %>
    <% else %>
      <p><%= t('.no_result') %></p>
    <% end %>
    <%= paginate @spots %>
  </div>
</div>
<%= javascript_pack_tag 'google_map' %>
