<div class="w-full max-w-md mt-10 mb-32">
  <div class="pt-4 pb-5">
    <span id="btnMap" class="hidden inline-block bg-white rounded-full border border-gray-200 align-middle px-3 py-1 text-sm mr-2 mb-2 hover:bg-gray-200">
      <i class="fa-solid fa-location-dot"></i>
      <%= t('.map_view') %>
    </span>
    <span id="btnList" class="inline-block bg-white rounded-full border border-gray-200 align-middle px-3 py-1 text-sm mr-2 mb-2 hover:bg-gray-200">
      <i class="fas fa-list"></i>
      <%= t('.list_view') %>
    </span>
    <input type="text" id="keyword" class="w-full flex rounded-full border border-gray-200 px-3 py-1 text-sm" placeholder='駅名・施設名で検索'></input>
    <div class="my-8 flex justify-center">
      <span id="clear" class="btn cancel-btn mr-3"><%= t('defaults.cancel') %></span>
      <span id="search" class="btn nomal-btn mr-3"><%= t('defaults.search') %></span>
    </div>
  </div>
  <div id="spotsMap" style="height:700px; width:100%;"></div>
  <div id="spotsList" class="hidden">
    <% if @spots.present? %>
      <%= render @spots %>
    <% else %>
      <p><%= t('.no_result') %></p>
    <% end %>
    <%= paginate @spots %>
  </div>
</div>
<%= javascript_pack_tag 'google_map' %>
