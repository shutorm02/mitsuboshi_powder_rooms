<div class="w-full max-w-md my-10">
  <div id="google-map"></div>
  <div class="pt-4 pb-2">
    <span id="btnMap" class="inline-block bg-white rounded-full border border-gray-200 align-middle px-3 py-1 text-sm mr-2 mb-2 hover:bg-gray-200">
      <i class="fa-solid fa-location-dot"></i>
      <%= t('.map_view') %>
    </span>
    <span id="btnList" class="inline-block bg-white rounded-full border border-gray-200 align-middle px-3 py-1 text-sm mr-2 mb-2 hover:bg-gray-200">
      <i class="fas fa-list"></i>
      <%= t('.list_view') %>
    </span>
  </div>
  <% if @spots.present? %>
    <%= render @spots %>
  <% else %>
    <p><%= t('.no_result') %></p>
  <% end %>
  <%= paginate @spots %>
</div>
