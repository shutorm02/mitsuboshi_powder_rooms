<a id="btnMap" href="spots#map" class="hidden inline-block bg-white rounded-full border border-gray-200 align-middle px-3 py-1 text-xs mr-2 mb-2 hover:bg-gray-200">
  <i class="fa-solid fa-location-dot"></i>
  <%= t('defaults.map_view') %>
</a>
<a id="btnList" href="spots#list" class="inline-block bg-white rounded-full border border-gray-200 align-middle px-3 py-1 text-xs mr-2 mb-2 hover:bg-gray-200">
  <i class="fas fa-list"></i>
  <%= t('defaults.list_view') %>
</a>
<div id="mapSearchForm" class="flex mb-5">
  <div class="relative w-full">
    <div class="flex border rounded border-gray-200">
      <input type="text" id="keyword" class="block p-2 w-full z-20" placeholder="<%= t('defaults.search_by_facility') %>">
      <button id="search" class="flex items-center px-4 border-l bg-gray-200 hover:bg-mitsuboshi-blue" >
        <i class="fas fa-search text-white"></i>
      </button>
    </div>
  </div>
</div>


<ul class="accordion-area">
  <li>
    <section>
      <button class="accordion-btn" type="button"><%=t('defaults.search_by_condition') %></button>
      <div class="accordion-body p-2">
        アコーディオンが開いたよ！
      </div>
    </section>
  </li>
</ul>








<div class="px-2">
  <%= form_with model: @search_spots_form, scope: :q, url: spots_path(anchor: 'list'), method: :get do |f| %>
    <div class="border-b-2 border-bg-mitsuboshi-gray pb-3">
      <p><%= t('activemodel.attributes.spot_form.equipment_detail_ids') %></p>
      <%= f.collection_check_boxes(:equipment_detail_ids, @equipment_details, :id, :content, include_hidden: false) do |b| %>
        <div class="flex">
          <%= b.label { b.check_box + b.text } %>
        </div>
      <% end %>
    </div>
    <div class="my-8 flex justify-center">
      <%= f.submit t('defaults.search_by_these_condition'), class: 'btn nomal-btn' %>
    </div>
  <% end %>
</div>