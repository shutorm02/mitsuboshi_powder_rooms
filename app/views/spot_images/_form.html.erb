<div class="border-b-2 border-bg-mitsuboshi-gray pb-3">
  <%= render 'spots/spot_title', spot: @spot %>
</div>
<div class="px-5 pt-5">
  <%= form_with model: @image, url: [@spot, @image], local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="mb-5">
      <div class="pt-5 pb-3">
        <%= f.label :image %>
        <%= f.hidden_field :image_cache %>
      </div>
      <%= f.file_field :image, class: 'w-full rounded border border-gray-200 p-2' %>
    </div>
    <div class="my-8 flex justify-center">
      <%= f.submit t('defaults.add-image'), class: 'text-center rounded shadow py-2 px-4 w-40 nomal-btn' %>
    </div>
  <% end %>
</div>
