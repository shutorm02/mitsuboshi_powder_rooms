<nav
  class="top-0 absolute z-50 w-full flex flex-wrap items-center justify-between px-2 py-3 navbar-expand-lg bg-pink-600"
>
  <div
    class="container px-4 mx-auto flex flex-wrap items-center justify-between"
  >
    <div
      class="w-full relative flex justify-between lg:w-auto lg:static lg:block lg:justify-start"
    >
      <%= link_to 'Mistuboshi Powder Rooms', root_path, class: 'text-sm font-bold leading-relaxed inline-block mr-4 py-2 whitespace-nowrap uppercase text-white' %>
    </div>
  </div>
</nav>
<main>
  <section class="relative w-full h-full py-40 min-h-screen">
    <div
      class="absolute top-0 w-full h-full bg-gray-800 bg-full bg-no-repeat"
    ></div>
    <div class="container mx-auto px-4 h-full">
      <div class="flex content-center items-center justify-center h-full">
        <div class="w-full lg:w-4/12 px-4">
          <div
            class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-200 border-0"
          >
            <div class="rounded-t mb-0 px-6 py-6">
              <div class="text-center mb-3">
                <h6 class="text-sm font-bold">
                  <%= t('.title') %>
                </h6>
              </div>
            </div>
            <div class="flex-auto px-4 lg:px-10 py-10 pt-0">
              <%= form_with url: admin_login_path, local: true do |f| %>
                <div class="relative w-full mb-3">
                  <%= f.label :email, User.human_attribute_name(:email), class: 'block uppercase text-xs font-bold mb-2' %>
                  <%= f.text_field :email, class: 'border-0 px-3 py-3 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150', placeholder: :email %>
                </div>
                <div class="relative w-full mb-3">
                  <%= f.label :password, User.human_attribute_name(:password), class: 'block uppercase text-xs font-bold mb-2' %>
                  <%= f.password_field :password, class: 'border-0 px-3 py-3 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150', placeholder: :password %>
                </div>
                <div class="text-center mt-6">
                  <%= f.submit t('defaults.login'), class: 'bg-gray-800 text-white active:bg-gray-600 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full ease-linear transition-all duration-150' 
                  %>
                </div>
              <% end %> 
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer class="absolute w-full bottom-0 bg-blueGray-800 pb-6">
      <div class="container mx-auto px-4">
        <hr class="mb-6 border-b-1 border-blueGray-600" />
        <div
          class="flex flex-wrap items-center md:justify-between justify-center"
        >
          <div class="w-full md:w-4/12 px-4">
            <div
              class="text-sm text-white font-semibold py-1 text-center md:text-left"
            >
              Copyright © 三つ星トイレ - Mistuboshi Powder Rooms -
            </div>
          </div>
        </div>
      </div>
    </footer>
  </section>
</main>
